<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user,
    size: Settings.gravatar.index_page_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "microposts.posted_time", time: time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user? micropost.user %>
      <%= link_to t("delete_text"), micropost, method: :delete,
        data: {confirm: t("confirm_delete_message")} %>
    <% end %>
  </span>
</li>
